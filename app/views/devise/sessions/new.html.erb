<section class="container-forms">
  <div class="left-half">
  </div>
  <div class="right-half">
    <div class="custom-form">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <div class="row">
            <div class="col-md-10">
              <h2 class="text-center">Log in</h2>
            </div>
          </div>
          <div class="row">
            <div class="col-md-10">
              <%= f.input :email, required: false, autofocus: true, input_html: { autocomplete: "email" } %>
            </div>
          </div>
          <div class="row">
            <div class="col-md-10">
              <%= f.input :password, required: false, input_html: { autocomplete: "current-password" } %>
            </div>
          </div>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="row">
          <div class="col-md-10">
            <div class="form-actions container-link-login">
              <%= f.button :submit, "Log in", class: 'btn btn-success text-white float-right' %>
              <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>