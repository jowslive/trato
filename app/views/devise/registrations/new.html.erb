<section class="container-forms">
  <div class="left-half">
  </div>
  <div class="right-half">
    <div class="custom-form">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">
          <div class="row">
            <div class="col-md-10">
              <h2 class="text-center">Sign Up</h2>
            </div>
          </div>
          <div class="row">
            <div class="col-md-10">
              <%= f.input :name, required: true, autofocus: true %>
            </div>
          </div>
          <div class="row">
            <div class="col-md-10">
              <%= f.input :email, required: true, input_html: { autocomplete: "email" } %>
            </div>
          </div>
          <div class="row">
            <div class="col-md-10">
              <%= f.input :password, required: true, hint: ("4 characters minimum" if 4), input_html: { autocomplete: "new-password" } %>
            </div>
          </div>
          <div class="row">
            <div class="col-md-10">
              <%= f.input :password_confirmation, required: true, input_html: { autocomplete: "new-password" } %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-10">
            <div class="form-actions">
              <%= f.button :submit, "Sign up", class: 'btn btn-primary w-100 mt-3' %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>