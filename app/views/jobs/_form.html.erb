<div class="container w-50 mt-5">
  <div class="container-form">
    <%= simple_form_for @job do |f| %>
      <%= f.input :name, placeholder: 'Job position'%>
      <%= f.input :content, placeholder: 'Job details' %>
      
      <% if @job.cnpj %>
        <%= f.input :cnpj, hint: "Only numbers", input_html: { value: @job.cnpj.scan(/\d/).join, type: "number" } %>
      <% else %>
        <%= f.input :cnpj, placeholder: '00000000000000', hint: "Only numbers", input_html: { type: "number" } %>
      <% end %>
      <%= f.input :amount, placeholder: 'Number of openings' %>
      <%= link_to 'Back', jobs_path, class: 'btn btn-primary' %>
      <%= f.submit class: 'btn btn-success float-right text-white' %>
    <% end %>
  </div>
</div>